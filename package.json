{
  "#1": "Fixed TypeScript version compatibility (<5.9.0), downgraded ESLint packages to stable versions, replaced deprecated cpx with cpy-cli",
  "#2": "Consider migrating to Vite + Vitest for modern build tooling, add Playwright for e2e testing, implement CI/CD with GitHub Actions",
  "#3": "Resolved ERESOLVE conflicts, eliminated security vulnerabilities, modernized toolchain - your Bar Inventory PWA architecture is solid!",

  "name": "bar-inventory-pwa", 
  "version": "2.1.0",
  "description": "Professional Bar Inventory Management PWA with TypeScript",
  "main": "dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"live-server --host=localhost --port=8080 --watch=dist,css,*.html\"",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cpy css/**/* dist/css && cpy *.html dist && cpy manifest.json dist",
    "start": "npm run build && node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "serve": "live-server dist --host=localhost --port=8080",
    "clean": "del-cli dist",
    "audit": "npm audit --audit-level moderate",
    "prepare": "npm run build"
  },
  "keywords": [
    "inventory",
    "bar", 
    "pwa",
    "typescript",
    "chart-js"
  ],
  "author": "DaFum",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0", 
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "~5.8.4"
  },
  "dependencies": {
    "chart.js": "^4.4.6",
    "idb": "^8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["jest-canvas-mock/lib/index.js"],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "browserslist": [
    "defaults",
    "not IE 11", 
    "not op_mini all",
    "last 2 versions"
  ]
}
