{
  "#1": "Updated all deprecated packages: eslint v9+, rimraf v6+, glob latest, uuid v10+, core-js v3+, replaced deprecated packages",
  "#2": "Consider adding Vite for faster builds, Vitest for testing, and Playwright for e2e testing in future iterations",
  "#3": "Fixed security vulnerabilities, removed memory-leaking packages, updated TypeScript toolchain - you're building something impressive!",

  "name": "bar-inventory-pwa",
  "version": "2.1.0",
  "description": "Professional Bar Inventory Management PWA with TypeScript",
  "main": "dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"live-server --host=localhost --port=8080 --watch=dist,css,*.html\"",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cpy css/**/* dist/css && cpy *.html dist && cpy manifest.json dist",
    "start": "npm run build && node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "serve": "live-server dist --host=localhost --port=8080",
    "clean": "del-cli dist node_modules",
    "audit": "npm audit --audit-level moderate",
    "security-check": "npm audit fix"
  },
  "keywords": [
    "inventory",
    "bar",
    "pwa",
    "typescript",
    "modern-web"
  ],
  "author": "DaFum",
  "license": "MIT",
  "devDependencies": {
    "@eslint/config-array": "^0.18.0",
    "@eslint/object-schema": "^2.1.4",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.1.0",
    "cpy-cli": "^5.0.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "open": "^10.1.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.4"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "idb": "^8.0.0",
    "uuid": "^11.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": ["jest-canvas-mock/lib/index.js"]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ]
}